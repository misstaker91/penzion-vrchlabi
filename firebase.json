{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "sitemap.xml",
        "destination": "/sitemap.xml"
      },
      {
        "source": "robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "./public/well-known/acme-challenge/**",
        "destination": "/.well-known/acme-challenge/:splat"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      }
    ]
  }
}
